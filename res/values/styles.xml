<resources>
    <style name="AppBaseTheme" parent="@android:style/Theme.Light" />
    <style name="AppTheme" parent="@style/AppBaseTheme" />
    <style name="CustomActivityTheme" parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>
    <style name="MyActionBar" parent="@android:style/Widget.Holo.ActionBar">

        <item name="android:height">56.0dp</item>
    </style>
    <style name="Theme.CustomActivityTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/myActionbar</item>
        <item name="android:actionBarSize">@dimen/artion_bar_height</item>

        <!--<item name="android:actionMenuTextAppearance">@style/myActionText</item>-->
    </style>
    <style name="myActionbar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/mytitleTextStyle</item>
        <item name="android:subtitleTextStyle">@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle</item>
        <item name="android:textAppearance">@style/myActionText</item>
        <item name="android:background">@drawable/actionbar_background</item>
    </style>
    <style name="mytitleTextStyle">
        <item name="android:textColor">@color/text_normal_color</item>
        <item name="android:textSize">30sp</item>
    </style>
    <style name="myActionButtonStyle" parent="@android:style/Widget.Holo.ActionButton">
        <item name="android:padding">100dp</item>
    </style>

    <style name="myActionBarTitle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/blue_text</item>
        <item name="android:paddingLeft">100dp</item>
    </style>
    <style name="myActionText">
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:paddingRight">100dp</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textColor">@color/text_normal_color</item>

    </style>
    <style name="MyDialog" parent="@android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="MyWeixinDialog" parent="MyDialog">
        <item name="android:windowSoftInputMode">adjustPan|stateHidden</item>
    </style>

    <style name="searchbutton" >
        <item name="android:background">@drawable/search_product_selector</item>
    </style>
    
     <style name="BlueBotton" >
        <item name="android:background">@drawable/btn_blue</item>
        <item name="android:textColor">#fff3f3f3</item>
    </style>

    <style name="paysuccessstyle">
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
</resources>
