<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="100dp"
    android:layout_width="fill_parent"
    android:minHeight="100dp"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical"
    android:paddingLeft="30dp">

    <TextView
        android:text="￥233"
        android:textColor="@color/text_normal_color"
        android:textSize="30sp"
        android:id="@+id/textPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="20dp"
        android:layout_alignBottom="@+id/textPrice"
        android:textSize="20sp"
        android:text="未支付"
        android:layout_toRightOf="@id/textPrice"
        android:textColor="@color/solid_red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:singleLine="true"
        android:ellipsize="end"
        android:textSize="20sp"
        android:textColor="@color/hint_color"
        android:text="商品名称："
        android:layout_below="@+id/textPrice"
        android:id="@+id/textProductName"
        android:layout_width="110dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginRight="400dp"
        android:textSize="20sp"
        android:text="订单号："
        android:textColor="@color/hint_color"
        android:layout_alignBottom="@+id/textProductName"
        android:layout_alignRight="@+id/btnCancel"
        android:id="@+id/textOrderNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_alignRight="@+id/btnCancel"
        android:textColor="@color/hint_color"
        android:layout_marginRight="200dp"
        android:text="2014-11-12 11:12:13"
        android:textSize="20sp"
        android:id="@+id/textCreateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:gravity="center"
        android:layout_marginRight="220dp"
        android:layout_alignRight="@+id/btnPrint"
        android:id="@+id/btnCancel"
        android:orientation="horizontal"
        android:background="@drawable/btn_white"
        android:layout_width="180dp"
        android:layout_height="75dp">

        <ImageView
            android:src="@drawable/cancel"
            android:id="@+id/imageCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="10dp"
            android:text="撤销挂单"
            android:textColor="@color/text_normal_color"
            android:textSize="25sp"
            android:id="@+id/textCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:id="@+id/btnPrint"
        android:orientation="horizontal"
        android:background="@drawable/btn_blue"
        android:layout_width="180dp"
        android:layout_height="75dp">

        <ImageView
            android:src="@drawable/repay"
            android:id="@+id/imagePrint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginLeft="10dp"
            android:text="支付挂单"
            android:textColor="@color/solid_white"
            android:textSize="25sp"
            android:id="@+id/textPrint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


</RelativeLayout>
