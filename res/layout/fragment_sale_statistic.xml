<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".trade.pos.SaleStatisticFragment">

    <LinearLayout
        android:gravity="center_vertical|center_horizontal"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="120dp">

        <LinearLayout
            android:id="@+id/btnStartTime"
            android:clickable="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="50dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/text_normal_color"
                android:gravity="center"
                android:textSize="25sp"
                android:background="@drawable/btn_left"
                android:text="开始时间"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textStartTime"
                android:layout_marginLeft="-1dp"
                android:textColor="@color/text_normal_color"
                android:gravity="center"
                android:textSize="20sp"
                android:text="2014-07-08 11:22:00"
                android:background="@drawable/btn_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnEndTime"
            android:clickable="true"
            android:gravity="center_vertical"
            android:layout_marginLeft="50dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/text_normal_color"
                android:gravity="center"
                android:textSize="25sp"
                android:background="@drawable/btn_left"
                android:text="结束时间"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textEndTime"
                android:layout_marginLeft="-1dp"
                android:textColor="@color/text_normal_color"
                android:gravity="center"
                android:textSize="20sp"
                android:text="2014-07-08 11:22:00"
                android:background="@drawable/btn_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/divide"
        android:layout_gravity="center" />

    <RelativeLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="0dp"
            android:orientation="vertical"
            android:background="@drawable/full_corner_area"
            android:layout_width="600dp"
            android:layout_height="wrap_content">

            <TextView
                android:gravity="center"
                android:textSize="30sp"
                android:textColor="@color/text_normal_color"
                android:text="销售统计"
                android:visibility="gone"
                android:layout_width="fill_parent"
                android:layout_height="90dp" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/divide"
                android:visibility="gone"
                android:layout_gravity="center" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">
                <ImageView
                    android:minWidth="40dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/money"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:textSize="25sp"
                    android:textColor="@color/text_normal_color"
                    android:text="销售总额"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:id="@+id/textTotalSale"
                    android:layout_gravity="center"
                    android:textSize="55sp"
                    android:textColor="@color/text_normal_color"
                    android:text="￥1222345.00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/divide"
                android:layout_gravity="center" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="70dp">

                <ImageView
                    android:minWidth="40dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/cash"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:textSize="25sp"
                    android:textColor="@color/text_normal_color"
                    android:text="现金消费"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textCash"
                    android:layout_marginLeft="200dp"
                    android:textSize="25sp"
                    android:textColor="@color/text_normal_color"
                    android:text="￥1222345.00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/divide"
                android:layout_gravity="center" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="70dp">

                <ImageView
                    android:minWidth="40dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/trade_bankcard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:textSize="25sp"
                    android:textColor="@color/text_normal_color"
                    android:text="刷卡消费"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/textBankcard"
                    android:layout_marginLeft="200dp"
                    android:textSize="25sp"
                    android:textColor="@color/text_normal_color"
                    android:text="￥12345.00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/divide"
                android:layout_gravity="center" />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="fill_parent"
                android:layout_height="70dp">

                <ImageView
                    android:minWidth="40dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/trade_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="20dp"
                    android:textSize="25sp"
                    android:textColor="@color/text_normal_color"
                    android:text="交易数量"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="right"
                    android:id="@+id/textSaleOrderCount"
                    android:layout_marginLeft="200dp"
                    android:textSize="25sp"
                    android:textColor="@color/text_normal_color"
                    android:text="123456"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/divide"
                android:layout_gravity="center"
                android:visibility="gone"/>

            <LinearLayout

                android:gravity="center"
                android:layout_width="fill_parent"
                android:layout_height="90dp"
                android:visibility="gone">

                <LinearLayout
                    android:clickable="true"
                    android:id="@+id/btnPrint"
                    android:background="@drawable/btn_green"
                    android:gravity="center"
                    android:layout_width="200dp"
                    android:layout_height="60dp">

                    <ImageView
                        android:src="@drawable/print_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginLeft="20dp"
                        android:textSize="20sp"
                        android:textColor="@color/solid_white"
                        android:text="打印"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
