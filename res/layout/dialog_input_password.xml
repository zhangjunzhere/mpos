<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="640dp"
    android:layout_height="fill_parent"
    android:background="@color/second_backgroud"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_gravity="center"
    tools:context="com.itertk.app.mpos.login.ModifyPasswordActivity">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back_image_selector" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入密码验证"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_normal_color"
            android:textSize="35sp" />

    </RelativeLayout>
    <ImageView
        android:id="@+id/divide1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/title"
        android:background="@drawable/divide"
        />

    <RelativeLayout
        android:id="@+id/password_content"
        android:layout_below="@id/divide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pwd_tip"
        android:textSize="35dp"
        android:layout_centerHorizontal="true"
        android:text="请输入密码"/>
        <LinearLayout
            android:layout_width="500dp"
            android:layout_marginTop="70dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/bound_view"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="0dp">
        <EditText
            android:id="@+id/inputpwd"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/pwd_tip"
            android:drawableLeft="@drawable/password"
            android:background="@null"
            android:textColorHint="#AAAAAA"
            android:textSize="30sp"
            android:drawablePadding="20dp"
            android:password="true"
            android:layout_centerInParent="true"
            android:hint="请输入密码"/>
        </LinearLayout>

    </RelativeLayout>

    <Button
        android:layout_below="@id/password_content"
        android:textColor="@color/solid_white"
        android:textSize="30sp"
        android:layout_marginTop="40dp"
        android:background="@drawable/my_blue_selector"
        android:text="确定"
        android:layout_centerInParent="true"
        android:id="@+id/btnOK"
        android:layout_width="500dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnOK"/>
</RelativeLayout>
