<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="500dp"
    android:layout_height="match_parent"
    android:background="@drawable/full_corner_area"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    android:layout_gravity="center"
    android:padding="0dp">

    <TextView
        android:layout_marginTop="15dp"
        android:text="请选择日期"
        android:textSize="40sp"
        android:textColor="@color/text_normal_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/divide"
        android:layout_gravity="center" />

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <kankan.wheel.widget.WheelView

            android:id="@+id/wheelYear"
            android:layout_width="120dp"
            android:layout_height="wrap_content" />

        <kankan.wheel.widget.WheelView
            android:id="@+id/wheelMonth"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />

        <kankan.wheel.widget.WheelView
            android:id="@+id/wheelDay"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />

        <kankan.wheel.widget.WheelView
            android:id="@+id/wheelHour"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />

        <kankan.wheel.widget.WheelView
            android:id="@+id/wheelMinute"
            android:layout_width="80dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/divide"
        android:layout_gravity="center" />

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginBottom="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:text="确定"
            android:textColor="@color/solid_white"
            android:textSize="30sp"
            android:id="@+id/btnOK"
            android:background="@drawable/my_blue_selector"
            android:layout_width="150dp"
            android:layout_height="75dp" />

        <Button
            android:layout_marginLeft="100dp"
            android:text="取消"
            android:textColor="@color/solid_white"
            android:textSize="30sp"
            android:id="@+id/btnCancel"
            android:background="@drawable/my_green_selector"
            android:layout_width="150dp"
            android:layout_height="75dp" />
    </LinearLayout>
</LinearLayout>