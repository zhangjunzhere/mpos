<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="700dp"
    android:layout_height="match_parent"
    android:gravity="center"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_centerInParent="true"
    tools:context="com.itertk.app.mpos.trade.pos.PayActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/second_backgroud"
        android:orientation="vertical">

        <RelativeLayout
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="100dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/dialogback"
            android:background="@drawable/btn_back_image_selector"
            android:layout_marginLeft="20dp"
            />
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/totalPrice"
                android:singleLine="true"
                android:layout_height="fill_parent"
                android:textColor="@color/text_normal_color"
                android:textSize="40dp"
                android:layout_margin="20dp"
                android:layout_centerInParent="true"
                android:gravity="center" />


        </RelativeLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/divide" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:gravity="center">

            <Button
                android:padding="0dp"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:id="@+id/btnMoney50"
                android:text="50"
                android:gravity="center"
                android:textSize="40dp"
                android:textColor="@drawable/cash_edit_selector"
                android:background="@drawable/cash_selector" />

            <Button
                android:padding="0dp"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:id="@+id/btnMoney100"
                android:text="100"
                android:layout_toRightOf="@+id/btnMoney50"
                android:gravity="center"
                android:textSize="40dp"
                android:textColor="@drawable/cash_edit_selector"
                android:background="@drawable/cash_selector" />

            <Button
                android:padding="0dp"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="40dp"
                android:id="@+id/btnMoney200"
                android:text="200"
                android:layout_toRightOf="@+id/btnMoney100"
                android:gravity="center"
                android:textSize="40dp"
                android:textColor="@drawable/cash_edit_selector"
                android:background="@drawable/cash_selector" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="150dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_margin="20dp"
                android:background="@drawable/checkout_cash_input"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageCash"
                    android:layout_margin="5dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/checkout_cash" />

                <EditText
                    android:singleLine="true"
                    android:inputType="numberDecimal"
                    android:layout_toRightOf="@+id/imageCash"
                    android:layout_width="500dp"
                    android:layout_height="match_parent"
                    android:hint="现金支付"
                    android:id="@+id/textCash"
                    android:paddingLeft="20dp"
                    android:background="@null"
                    android:textColor="@color/text_normal_color"
                    android:textColorHint="@color/hint_color"
                    android:textSize="40dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp" />


            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/givecharge"
            android:layout_height="100dp"
            android:textColor="@color/text_normal_color"
            android:textSize="60dp"
            android:text="找零"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textColor="@color/solid_white"
                android:textSize="50dp"
                android:layout_margin="5dp"
                android:id="@+id/btnCheckout"

                android:background="@drawable/checkout_btn_selector" />


        </RelativeLayout>


    </LinearLayout>

</RelativeLayout>
