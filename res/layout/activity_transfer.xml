<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/main_backgroud"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    tools:context="com.itertk.app.mpos.trade.convenience.TransferActivity">


    <LinearLayout
        android:id="@+id/layoutMain"
        android:layout_width="750dp"
        android:layout_height="fill_parent"
        android:background="@drawable/full_corner_area"
        android:orientation="vertical"
        android:padding="0dp">


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:background="@drawable/top_corner"
            android:gravity="center"
            android:text="转账汇款"
            android:textColor="@color/text_normal_color"
            android:textSize="35sp" />

        <ScrollView
            android:overScrollMode="never"
            android:scrollbars="none"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:maxLength="20"
                    android:singleLine="true"
                    android:id="@+id/textCreditcardNo"
                    android:layout_width="fill_parent"
                    android:layout_height="75dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit"
                    android:hint="请输入收款方卡号"
                    android:inputType="numberDecimal"
                    android:paddingLeft="20dp"
                    android:textColor="@color/text_normal_color"
                    android:textColorHint="@color/hint_color"
                    android:textSize="30sp" />

                <EditText
                    android:maxLength="20"
                    android:singleLine="true"
                    android:id="@+id/textCreditcardNoConfirm"
                    android:layout_width="fill_parent"
                    android:layout_height="75dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit"
                    android:hint="请确认收款方卡号"
                    android:inputType="numberDecimal"
                    android:paddingLeft="20dp"
                    android:textColor="@color/text_normal_color"
                    android:textColorHint="@color/hint_color"
                    android:textSize="30sp" />

                <!--<Button-->
                    <!--android:textColor="@color/text_normal_color"-->
                    <!--android:text="请选择收款方开户行"-->
                    <!--android:textSize="30sp"-->
                    <!--android:orientation="horizontal"-->
                    <!--android:id="@+id/btnBank"-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="75dp"-->
                    <!--android:layout_marginLeft="60dp"-->
                    <!--android:layout_marginRight="60dp"-->
                    <!--android:layout_marginTop="20dp"-->
                    <!--android:background="@drawable/btn_white">-->
                    <!--</Button>-->

                <EditText
                    android:singleLine="true"
                    android:id="@+id/textFullname"
                    android:layout_width="fill_parent"
                    android:layout_height="75dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit"
                    android:hint="请输入收款方户名"
                    android:paddingLeft="20dp"
                    android:textColor="@color/text_normal_color"
                    android:textColorHint="@color/hint_color"
                    android:textSize="30sp" />

                <EditText
                    android:singleLine="true"
                    android:id="@+id/textMoney"
                    android:layout_width="fill_parent"
                    android:layout_height="75dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit"
                    android:hint="请输入转账金额"
                    android:inputType="numberDecimal"
                    android:paddingLeft="20dp"
                    android:textColor="@color/text_normal_color"
                    android:textColorHint="@color/hint_color"
                    android:textSize="30sp" />

                <EditText
                    android:maxLength="20"
                    android:singleLine="true"
                    android:id="@+id/textPhone"
                    android:layout_width="fill_parent"
                    android:layout_height="75dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/edit"
                    android:hint="请输入收款方手机号码"
                    android:inputType="numberDecimal"
                    android:paddingLeft="20dp"
                    android:textColor="@color/text_normal_color"
                    android:textColorHint="@color/hint_color"
                    android:textSize="30sp" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center_vertical">

                    <CheckBox
                        android:id="@+id/checkArgree"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:background="@null"
                        android:button="@drawable/remember_password"
                        android:checked="true"
                        android:paddingLeft="20dp"
                        android:text="我已经阅读并同意《"
                        android:textColor="@color/text_normal_color"
                        android:textSize="25sp" />

                    <Button
                        android:id="@+id/btnRule"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:text="银行卡转账服务协议"
                        android:textColor="@color/blue_cc"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="》"
                        android:textColor="@color/text_normal_color"
                        android:textSize="25sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnNext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="60dp"
                    android:background="@drawable/btn_blue"
                    android:text="下一步"
                    android:textColor="@color/solid_white"
                    android:textSize="40sp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>


    <FrameLayout
        android:padding="0dp"
        android:id="@+id/itemArea"
        android:layout_width="450dp"
        android:layout_height="fill_parent"
        android:layout_marginLeft="40dp"
        android:layout_toRightOf="@id/layoutMain">


    </FrameLayout>
</RelativeLayout>
