<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.itertk.app.mpos.config.ProductConfigActivity">
    <EditText
        android:id="@+id/textInputGun"
        android:layout_width="1dp"
        android:layout_height="1dp" />
    <RelativeLayout
        android:layout_width="750dp"
        android:layout_height="fill_parent"
        android:id="@+id/relativeLayout2"
        android:background="@drawable/bound_view"
        android:clickable="false">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layoutTab"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent" >

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:id="@+id/btnProduct"
                android:clickable="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/user_tab_selector">

                <ImageView
                    android:duplicateParentState="true"
                    android:id="@+id/ib"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/product_tab_image_selector"
                    android:layout_gravity="center" />

                <TextView
                    android:duplicateParentState="true"
                    android:id="@+id/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品分类"
                    android:textColor="@drawable/shop_config_text_selector"
                    android:textSize="29sp"
                    android:ems="1"
                    android:gravity="center"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:id="@+id/btnAttribute"
                android:clickable="true"
                android:layout_below="@id/btnProduct"
                android:layout_alignParentLeft="true"
                android:background="@drawable/user_tab_selector">

                <ImageView
                    android:duplicateParentState="true"
                    android:id="@+id/ib2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/attribute_tab_image_selector"
                    android:layout_gravity="center" />

                <TextView
                    android:duplicateParentState="true"
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品属性"
                    android:textColor="@drawable/shop_config_text_selector"
                    android:textSize="29sp"
                    android:ems="1"
                    android:gravity="center"
                    android:layout_gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="60dp"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:id="@+id/btnReduce"
                android:clickable="true"
                android:layout_below="@id/btnAttribute"
                android:layout_alignParentLeft="true"
                android:background="@drawable/user_tab_selector">

                <ImageView
                    android:duplicateParentState="true"
                    android:id="@+id/ib3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/reduce_tab_image_selector"
                    android:layout_gravity="center" />

                <TextView
                    android:duplicateParentState="true"
                    android:id="@+id/tv3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商品优惠"
                    android:textColor="@drawable/shop_config_text_selector"
                    android:textSize="29sp"
                    android:ems="1"
                    android:gravity="center"
                    android:layout_gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <FrameLayout
            android:layout_marginLeft="-1dp"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/layoutTab"
            android:id="@+id/list_container"
            android:padding="0dp"
></FrameLayout>


    </RelativeLayout>

    <FrameLayout
        android:layout_width="450dp"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:id="@+id/itemArea"></FrameLayout>

</RelativeLayout>
