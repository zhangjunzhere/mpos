<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/main_backgroud"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:gravity="center"
    tools:context="com.itertk.app.mpos.login.ForgetPasswordActivity">

    <LinearLayout
        android:layout_width="800dp"
        android:layout_height="wrap_content"
        android:background="@drawable/full_corner_area"
        android:padding="0dp"
        android:id="@+id/relativeLayout2"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:src="@drawable/phone"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:layout_gravity="center_vertical" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:textColor="@color/text_normal_color"
                android:id="@+id/textPhone"
                android:layout_marginLeft="30dp"
                android:gravity="left|center"
                android:textSize="25sp"
                android:textColorHint="@color/hint_color"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="请输入手机号"
                android:singleLine="true"
                android:inputType="number" />

        </LinearLayout>

        <ImageView
            android:layout_width="798px"
            android:layout_height="wrap_content"
            android:background="@drawable/divide"
            android:layout_gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checkCodeImage"
                android:src="@drawable/id_card"
                android:gravity="center"

                android:layout_gravity="center_vertical" />

            <EditText
                android:layout_width="450px"
                android:layout_height="fill_parent"
                android:textColor="@color/text_normal_color"
                android:id="@+id/textCheckCode"
                android:layout_marginLeft="30dip"
                android:textSize="25dp"
                android:gravity="left|center"
                android:layout_gravity="center|right"
                android:password="false"
                android:hint="请输入验证码"
                android:background="@null"
                android:textColorHint="@color/hint_color"
                android:singleLine="true"
                android:inputType="number" />

            <Button
                android:layout_width="200px"
                android:layout_height="80px"
                android:singleLine="true"
                android:text="获取验证码"
                android:id="@+id/btnGetCheckCode"
                android:textColor="@color/text_normal_color"
                android:gravity="center_vertical|center|center_horizontal"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:background="@drawable/my_white_selector" />
        </LinearLayout>

        <ImageView
            android:layout_width="798px"
            android:layout_height="wrap_content"
            android:background="@drawable/divide"
            android:layout_gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/password"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:layout_gravity="center_vertical" />

            <EditText
                android:password="true"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:textColor="@color/text_normal_color"
                android:id="@+id/textPassword"
                android:layout_marginLeft="30dp"
                android:gravity="left|center"
                android:textSize="25sp"
                android:textColorHint="@color/hint_color"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="请输入新密码"
                android:singleLine="true" />

        </LinearLayout>

        <ImageView
            android:layout_width="798px"
            android:layout_height="wrap_content"
            android:background="@drawable/divide"
            android:layout_gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phoneForgetImage"
                android:src="@drawable/password"
                android:layout_marginLeft="50dp"
                android:gravity="center"
                android:layout_gravity="center_vertical" />

            <EditText
                android:password="true"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:textColor="@color/text_normal_color"
                android:id="@+id/textPasswordConfirm"
                android:layout_marginLeft="30dp"
                android:gravity="left|center"
                android:textSize="25sp"
                android:textColorHint="@color/hint_color"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="请确认新密码"
                android:singleLine="true" />

        </LinearLayout>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提交"
        android:textSize="30dp"
        android:id="@+id/btnSubmit"
        android:layout_marginTop="75px"
        android:layout_below="@+id/relativeLayout2"
        android:layout_alignLeft="@+id/relativeLayout2"
        android:layout_alignRight="@+id/relativeLayout2"
        android:background="@drawable/my_blue_selector"
        android:textColor="#ffffffff" />

</RelativeLayout>
