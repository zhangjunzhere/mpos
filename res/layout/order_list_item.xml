    <!--android:id="@+id/btnDelete"-->
    <!--android:src="@drawable/btn_delete_2"-->
    <!--android:focusable="false"-->
    <!--android:background="@null"-->
    <!--android:focusableInTouchMode="false"/>-->
</RelativeLayout>
