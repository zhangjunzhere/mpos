<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.itertk.app.mpos.account.AccountCashFragment">
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:background="@drawable/bound_view"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="0dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_normal_color"
            android:textSize="25sp"
            android:text="可提现金额"/>

        <TextView
            android:id="@+id/textBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_normal_color"
            android:textSize="50sp"
            android:text="￥3568.15"/>

        </LinearLayout>

    <LinearLayout
        android:layout_width="500dp"
        android:layout_marginTop="30dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:background="@drawable/bound_view"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="0dp">
        
        <EditText
            android:id="@+id/inputBalance"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_marginLeft="20dp"
            android:drawableLeft="@drawable/cash"
            android:background="@null"
            android:textColorHint="#AAAAAA"
            android:inputType="numberDecimal"
            android:textSize="30sp"
            android:hint="请输入提现金额"/>
        </LinearLayout>

    <Button
        android:id="@+id/btnGetBalance"
        android:layout_marginTop="30dp"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:background="@drawable/my_blue_selector"
        android:text="提现"/>

</LinearLayout>
</FrameLayout>
