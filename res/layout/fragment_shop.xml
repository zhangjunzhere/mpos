<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".config.ShopFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <EditText
            android:layout_width="500dp"
            android:layout_height="80dp"
            android:textColorHint="@color/hint_color"
            android:hint="请输入商户名称"
            android:textSize="30sp"
            android:textColor="@color/text_normal_color"
            android:background="@drawable/edit"
            android:id="@+id/textShopName"
            android:singleLine="true" />

        <EditText
            android:singleLine="true"
            android:layout_marginTop="20dp"
            android:layout_width="500dp"
            android:layout_height="80dp"
            android:textColor="@color/text_normal_color"
            android:textColorHint="@color/hint_color"
            android:hint="请输入门店地址"
            android:textSize="30sp"
            android:background="@drawable/edit"
            android:id="@+id/textShopAddr" />

        <TextView
            android:paddingTop="20dp"
            android:paddingBottom="0dp"
            android:paddingLeft="20dp"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:textSize="30sp"
            android:text="商户MID: 1234556667"
            android:textColor="@color/bar_normal_color"
            android:id="@+id/textMID" />

        <TextView
            android:paddingTop="10dp"
            android:paddingBottom="0dp"
            android:paddingLeft="20dp"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:textSize="30sp"
            android:text="商户TID: 1234556667"
            android:textColor="@color/bar_normal_color"
            android:id="@+id/textTID" />

        <TextView
            android:paddingTop="10dp"
            android:paddingBottom="20dp"
            android:paddingLeft="20dp"
            android:layout_width="500dp"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:textSize="30sp"
            android:textColor="@color/bar_normal_color"
            android:text="CPU ID: 1234556667"
            android:id="@+id/textCPU" />

        <Button
            android:layout_width="500px"
            android:layout_height="80px"
            android:textColor="@color/solid_white"
            android:textSize="30dp"
            android:text="保存信息"
            android:id="@+id/btnSave"
            android:background="@drawable/btn_blue" />
    </LinearLayout>

</FrameLayout>
