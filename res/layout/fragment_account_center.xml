<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.itertk.app.mpos.account.AccountCenterFragment">

    <ScrollView
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:overScrollMode="never"
        android:scrollbars="none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="850dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="0dp">

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:gravity="left"
                        android:text="账户信息"
                        android:textColor="@color/text_normal_color"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/btnLogout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="退出账号"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/solid_red"
                        android:textSize="30sp"></TextView>
                </RelativeLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bound_view">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="账号："
                        android:textColor="@color/text_normal_color"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/textAccount"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical"
                        android:text="12345678901"
                        android:textColor="@color/text_normal_color"
                        android:textSize="25sp" />
                </RelativeLayout>
<View
    android:layout_width="1dp"
    android:layout_height="60dp"
    android:background="#c3c3c3"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="姓名："
                        android:textColor="@color/text_normal_color"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/textFullName"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical"
                        android:text="安卓"
                        android:textColor="@color/text_normal_color"
                        android:textSize="25sp" />
                </RelativeLayout>
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/divide" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:padding="0dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="银行卡："
                        android:textColor="@color/text_normal_color"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/textBankcard"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical"
                        android:text="66279394359435"
                        android:textColor="@color/text_normal_color"
                        android:textSize="25sp" />
                </RelativeLayout>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="60dp"
                        android:background="#c3c3c3"/>
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:padding="0dp"/>
                </LinearLayout>
</LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/btnAuth"
                android:layout_width="500dp"
                android:layout_height="80dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/btn_white"
                android:clickable="true"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:padding="0dp">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="认证管理"
                    android:textColor="@color/text_normal_color"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text=">"
                    android:textColor="@color/text_normal_color"
                    android:textSize="35sp" />
            </RelativeLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="left"
                android:text="账户管理"
                android:layout_marginTop="20dp"
                android:textColor="@color/text_normal_color"
                android:textSize="30sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RelativeLayout
                android:id="@+id/btnBankcard"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:background="@drawable/my_white_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:padding="0dp">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="银行卡管理"
                    android:textColor="@color/text_normal_color"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text=">"
                    android:textColor="@color/text_normal_color"
                    android:textSize="35sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btnSecurity"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:layout_marginLeft="20dp"
                android:background="@drawable/my_white_selector"
                android:clickable="true"
                android:gravity="center_vertical"
                android:padding="0dp">

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="fill_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:gravity="center_vertical"
                    android:text="修改密码"
                    android:textColor="@color/text_normal_color"
                    android:textSize="25sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical"
                    android:text=">"
                    android:textColor="@color/text_normal_color"
                    android:textSize="35sp" />
            </RelativeLayout>

            </LinearLayout>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:gravity="left"
                android:text="账户余额"
                android:layout_marginTop="20dp"
                android:textColor="@color/text_normal_color"
                android:textSize="30sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:background="@drawable/bound_view"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:padding="0dp">

                    <TextView
                        android:id="@+id/textBalance"
                        android:layout_width="200dp"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="￥3568.15"
                        android:textColor="@color/text_normal_color"
                        android:textSize="35sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/btnDeposit"
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/my_white_selector"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:padding="0dp">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="我要提现"
                        android:textColor="@color/text_normal_color"
                        android:textSize="25sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical"
                        android:text=">"
                        android:textColor="@color/text_normal_color"
                        android:textSize="35sp" />
                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:text="账户收益"
                android:visibility="gone"
                android:textColor="@color/text_normal_color"
                android:textSize="30sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/bound_view">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:padding="0dp">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="近一周收益："
                        android:textColor="@color/text_normal_color"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/weekIncome"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical"
                        android:text="￥3482.12"
                        android:textColor="@color/text_normal_color"
                        android:textSize="35sp" />

                </RelativeLayout>
                <View
                    android:layout_width="1dp"
                    android:layout_height="80dp"
                    android:background="#c3c3c3"/>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="80dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:gravity="center_vertical"
                    android:padding="0dp">

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="fill_parent"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="近一月收益："
                        android:textColor="@color/text_normal_color"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/monthIncome"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="20dp"
                        android:gravity="center_vertical"
                        android:text="￥3482.12"
                        android:textColor="@color/text_normal_color"
                        android:textSize="35sp" />
                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
