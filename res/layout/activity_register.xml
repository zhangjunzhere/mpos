<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/main_backgroud"
    android:gravity="center"
    tools:context="com.itertk.app.mpos.login.RegisterActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="0dp"
        android:orientation="vertical"
        android:background="@drawable/bound_view">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/phoneImage"
                android:src="@drawable/phone"
                android:paddingLeft="50dp"
                android:layout_gravity="center" />

            <EditText
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="fill_parent"
                android:hint="请输入手机号"
                android:textColorHint="@color/hint_color"
                android:textColor="@color/text_normal_color"
                android:id="@+id/textPhone"
                android:layout_marginLeft="8dp"
                android:textSize="25sp"
                android:gravity="left|center"
                android:paddingLeft="30dp"
                android:background="@null"
                android:singleLine="true"
                android:numeric="integer"
                android:inputType="number" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:text="必填"
                android:layout_weight="1"
                android:textColor="@color/hint_color"
                android:layout_marginLeft="8dp"
                android:textSize="25dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical|center|center_horizontal|right"
                android:layout_gravity="center" />
        </LinearLayout>

        <ImageView
            android:layout_width="798dp"
            android:layout_height="wrap_content"
            android:background="@drawable/divide"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/nameImage"
                android:src="@drawable/user"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="40dp"
                android:layout_gravity="center" />

            <EditText
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="fill_parent"
                android:hint="请输入姓名"
                android:textColorHint="@color/hint_color"
                android:textColor="@color/text_normal_color"
                android:id="@+id/textFullname"
                android:layout_marginLeft="15dp"
                android:textSize="25sp"
                android:gravity="left|center"
                android:paddingLeft="30dp"
                android:background="@null"
                android:singleLine="true" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:text="必填"
                android:textColor="@color/hint_color"
                android:layout_marginLeft="8dp"
                android:textSize="25sp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical|center|center_horizontal|right"
                android:layout_gravity="center" />
        </LinearLayout>

        <ImageView
            android:layout_width="798dp"
            android:layout_height="wrap_content"
            android:background="@drawable/divide"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/passwordRegisterImage"
                android:src="@drawable/password"
                android:paddingLeft="40dp"
                android:layout_gravity="center" />

            <EditText
                android:password="true"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="fill_parent"
                android:hint="请输入密码"
                android:textColorHint="@color/hint_color"
                android:textColor="@color/text_normal_color"
                android:id="@+id/textPassword"
                android:layout_marginLeft="8dp"
                android:textSize="25sp"
                android:gravity="left|center"
                android:paddingLeft="30dp"
                android:background="@null"
                android:singleLine="true" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:text="必填"
                android:textColor="@color/hint_color"
                android:layout_marginLeft="8dp"
                android:textSize="25sp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical|center|center_horizontal|right"
                android:layout_gravity="center" />
        </LinearLayout>

        <ImageView
            android:layout_width="798dp"
            android:layout_height="wrap_content"
            android:background="@drawable/divide"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/passwordConfirmImage"
                android:src="@drawable/password"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:paddingLeft="40dp"
                android:layout_gravity="center" />

            <EditText
                android:password="true"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="fill_parent"
                android:hint="请确认密码"
                android:textColorHint="@color/hint_color"
                android:textColor="@color/text_normal_color"
                android:id="@+id/textPasswordConfirm"
                android:layout_marginLeft="8dp"
                android:textSize="25dp"
                android:gravity="left|center"
                android:paddingLeft="30dp"
                android:background="@null"
                android:singleLine="true" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:text="必填"
                android:textColor="@color/hint_color"
                android:layout_marginLeft="8dp"
                android:textSize="25dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical|center|center_horizontal|right"
                android:layout_gravity="center" />
        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="0dp"
        android:layout_marginLeft="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bound_view"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/shopimage0"
                    android:src="@drawable/id_card"
                    android:paddingLeft="50dp"
                    android:layout_gravity="center" />

                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="fill_parent"
                    android:hint="请输入身份证号"
                    android:textColorHint="@color/hint_color"
                    android:textColor="@color/text_normal_color"
                    android:id="@+id/textIDCard"
                    android:layout_marginLeft="8dp"
                    android:textSize="25sp"
                    android:gravity="left|center"
                    android:paddingLeft="30dp"
                    android:background="@null"
                    android:singleLine="true"
                    android:digits="0123456789X"
                    android:inputType="text"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="fill_parent"
                    android:text="必填"
                    android:textColor="@color/hint_color"
                    android:layout_marginLeft="8dp"
                    android:textSize="25dp"
                    android:layout_marginRight="20dp"
                    android:gravity="center_vertical|center|center_horizontal|right"
                    android:layout_gravity="center" />
            </LinearLayout>
            <ImageView
                android:layout_width="798dp"
                android:layout_height="wrap_content"
                android:background="@drawable/divide"
                android:layout_gravity="center" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shopimage1"
                android:src="@drawable/shop_image"
                android:paddingLeft="50dp"
                android:layout_gravity="center" />

            <EditText
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="fill_parent"
                android:hint="请输入店铺名称"
                android:textColorHint="@color/hint_color"
                android:textColor="@color/text_normal_color"
                android:id="@+id/textShop_name"
                android:layout_marginLeft="8dp"
                android:textSize="25sp"
                android:gravity="left|center"
                android:paddingLeft="30dp"
                android:background="@null"
                android:singleLine="true"
                android:inputType="number" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:text="必填"
                android:textColor="@color/hint_color"
                android:layout_marginLeft="8dp"
                android:textSize="25dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical|center|center_horizontal|right"
                android:layout_gravity="center" />
        </LinearLayout>

            <ImageView
                android:layout_width="798dp"
                android:layout_height="wrap_content"
                android:background="@drawable/divide"
                android:layout_gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="100dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/shopimage2"
                android:src="@drawable/shop_image"
                android:paddingLeft="50dp"
                android:layout_gravity="center" />

            <EditText
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="fill_parent"
                android:hint="请输入店铺地址"
                android:textColorHint="@color/hint_color"
                android:textColor="@color/text_normal_color"
                android:id="@+id/textShop_addr"
                android:layout_marginLeft="8dp"
                android:textSize="25sp"
                android:gravity="left|center"
                android:paddingLeft="30dp"
                android:background="@null"
                android:singleLine="true"
                android:inputType="number" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="fill_parent"
                android:text="必填"
                android:textColor="@color/hint_color"
                android:layout_marginLeft="8dp"
                android:textSize="25dp"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical|center|center_horizontal|right"
                android:layout_gravity="center" />
        </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnshopType"
            android:layout_width="fill_parent"
            android:layout_height="90dp"
            android:background="@drawable/my_white_selector"
            android:clickable="true"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:padding="0dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shop_image"
                android:paddingLeft="50dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:gravity="center_vertical"
                android:text="请选择经营类型"
                android:paddingLeft="30dp"
                android:textColor="@color/text_normal_color"
                android:textSize="25sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_marginLeft="18dp"
                android:gravity="center_vertical"
                android:id="@+id/textShop_type"
                android:textColor="@color/text_normal_color"
                android:textSize="25sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_marginRight="20dp"
                android:gravity="right|center"
                android:text=">"
                android:textColor="@color/text_normal_color"
                android:textSize="35sp" />
        </LinearLayout>
        </LinearLayout>



    </LinearLayout>

    <Button
        android:layout_width="600dp"
        android:layout_height="wrap_content"
        android:text="注册"
        android:layout_marginTop="40dp"
        android:textSize="30sp"
        android:textColor="#ffffffff"
        android:id="@+id/btnRegister"
        android:layout_below="@+id/linearLayout"
        android:layout_centerInParent="true"
        android:background="@drawable/my_blue_selector" />

</RelativeLayout>
