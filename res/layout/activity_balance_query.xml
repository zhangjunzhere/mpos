<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:gravity="center"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.itertk.app.mpos.trade.convenience.BalanceQueryActivity">

    <LinearLayout
        android:padding="0dp"
        android:orientation="vertical"
        android:background="@drawable/conv_bg"
        android:layout_width="750dp"
        android:layout_height="match_parent">

        <TextView

            android:textColor="@color/text_normal_color"
            android:gravity="center"
            android:textSize="35sp"
            android:text="余额查询"
            android:background="@drawable/conv_navi"
            android:layout_width="fill_parent"
            android:layout_height="100dp" />


        <LinearLayout
            android:padding="0dp"
            android:orientation="vertical"
            android:layout_marginTop="40dp"
            android:background="@drawable/full_corner_area"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:paddingLeft="20dp"
                    android:textSize="30sp"
                    android:textColor="@color/text_normal_color"
                    android:text="卡号："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:singleLine="true"
                    android:editable="false"
                    android:gravity="center|left"
                    android:textColorHint="@color/hint_color"
                    android:hint="请输入要查询的银行卡卡号  "
                    android:background="@null"
                    android:id="@+id/textBankcard"
                    android:textSize="30sp"
                    android:textColor="@color/text_normal_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberDecimal" />

            </LinearLayout>

            <ImageView
                android:src="@drawable/divide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <LinearLayout
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <TextView
                    android:phoneNumber="true"
                    android:paddingLeft="20dp"
                    android:textSize="30sp"
                    android:textColor="@color/text_normal_color"
                    android:text="密码："
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:singleLine="true"
                    android:password="true"
                    android:editable="false"
                    android:gravity="center|left"
                    android:textColorHint="@color/hint_color"
                    android:hint="请输入您的银行卡密码"
                    android:background="@null"
                    android:id="@+id/textPassword"
                    android:textSize="30sp"
                    android:textColor="@color/text_normal_color"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="numberDecimal" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/btnQuery"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:background="@drawable/convience_query_selector"
            android:textSize="30sp"
            android:textColor="@color/solid_white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:background="@drawable/conv_balance_tip"
            android:paddingLeft="20dp"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp"
            android:layout_width="match_parent"
            android:layout_height="80dp"

            >


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
