<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_backgroud"
    android:gravity="center_vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.itertk.app.mpos.trade.convenience.AirTicketActivity">


    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="750dp"
        android:layout_height="fill_parent"
        android:clickable="false">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/layoutTab"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent">
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:id="@+id/btnOneway"
            android:layout_width="60px"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/user_tab_selector"
            android:clickable="true"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ib"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:duplicateParentState="true"
                android:paddingLeft="0dp"
                android:src="@drawable/oneway_tab_image_selector" />

            <TextView
                android:id="@+id/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:duplicateParentState="true"
                android:ems="1"
                android:paddingLeft="0dp"
                android:paddingTop="20dp"
                android:text="单程"
                android:textColor="@drawable/shop_config_text_selector"
                android:textSize="30dp"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:id="@+id/btnRound"
            android:layout_width="60px"
            android:layout_height="0dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/btnOneway"
            android:background="@drawable/user_tab_selector"
            android:clickable="true"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ib2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:duplicateParentState="true"
                android:paddingLeft="0dp"
                android:src="@drawable/round_tab_image_selector" />

            <TextView
                android:id="@+id/tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:duplicateParentState="true"
                android:ems="1"
                android:paddingLeft="0dp"
                android:paddingTop="20dp"
                android:text="往返"
                android:textColor="@drawable/shop_config_text_selector"
                android:textSize="30dp" />
        </LinearLayout>
        </LinearLayout>
        <FrameLayout
            android:id="@+id/tabContainer"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-1dp"
            android:layout_toRightOf="@id/layoutTab"
            android:background="@drawable/right_corner_eara"
            android:padding="0dp"></FrameLayout>


    </RelativeLayout>

    <LinearLayout
        android:padding="1dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/itemArea"
        android:layout_width="450dp"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/relativeLayout2"
        android:orientation="vertical">

    </LinearLayout>
</RelativeLayout>
