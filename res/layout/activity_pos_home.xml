<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/main_backgroud"
    tools:context="com.itertk.app.mpos.trade.pos.PosHomeActivity"
    android:gravity="center">


    <ImageButton
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/btnPos"
        android:src="@drawable/pos_selector"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="205dp"
        android:background="@null" />

    <TextView
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/textView"
        android:layout_below="@+id/btnBill"
        android:layout_alignLeft="@+id/btnBill"
        android:layout_alignRight="@+id/btnBill"
        android:text="台帐"
        android:textSize="50dp"
        android:gravity="center"
        android:textColor="@color/blue_cc" />

    <ImageButton
        android:layout_width="300px"
        android:layout_height="300px"
        android:layout_marginRight="147dp"
        android:id="@+id/btnBill"
        android:longClickable="false"
        android:background="@null"
        android:src="@drawable/bill_selector"
        android:layout_alignTop="@+id/btnPos"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="100px"
        android:layout_height="100px"
        android:text="收银"
        android:textSize="50dp"
        android:gravity="center"
        android:textColor="@color/blue_cc"
        android:id="@+id/textView2"
        android:layout_below="@+id/btnPos"
        android:layout_alignRight="@+id/btnPos"
        android:layout_alignLeft="@+id/btnPos" />
</RelativeLayout>
