<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/main_backgroud"
    android:gravity="center"
    tools:context="com.itertk.app.mpos.login.CertificateActivity">

    <LinearLayout
        android:layout_width="1100dp"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="0dp"
        android:background="@drawable/full_corner_area">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="120dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="尊敬的用户："
                android:textColor="@color/text_normal_color"
                android:id="@+id/textViewA"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="50dp"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="张三"
                android:textColor="@color/text_normal_color"
                android:id="@+id/textFullname"
                android:layout_alignTop="@id/textViewA"
                android:layout_alignLeft="@id/textViewA"
                android:layout_marginLeft="150dp"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您的帐户为："
                android:textColor="@color/text_normal_color"
                android:id="@+id/textViewC"
                android:layout_marginTop="5dp"
                android:layout_below="@id/textViewA"
                android:layout_alignLeft="@id/textViewA"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1234567890"
                android:textColor="@color/blue_text"
                android:id="@+id/textUserName"
                android:layout_marginTop="5dp"
                android:layout_alignLeft="@id/textFullname"
                android:layout_below="@id/textFullname"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_normal_color"
                android:text="请根据您企业的实际情况进行认证，认证后可享受旺铺宝功能。"
                android:id="@+id/textView"
                android:layout_below="@+id/textViewC"
                android:layout_alignLeft="@+id/textViewC"
                android:layout_toRightOf="@+id/textView"
                android:layout_marginTop="5dp"
                android:textSize="20dp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="1098dp"
            android:layout_height="wrap_content"
            android:background="@drawable/divide"
            android:layout_gravity="center" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="20dp">

            <RelativeLayout
                android:layout_height="100dp"
                android:layout_width="500dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/my_white_selector"
                android:id="@+id/btnYYZZ"
                android:clickable="true">

                <ImageView
                    android:scaleType="centerInside"
                    android:layout_height="74dp"
                    android:layout_width="74dp"
                    android:id="@+id/ItemImage1"
                    android:src="@drawable/item_image"
                    android:layout_marginLeft="23dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="营业执照正面拍照上传"
                    android:textColor="@color/text_normal_color"
                    android:textSize="25sp"
                    android:id="@+id/ItemText1"
                    android:layout_marginLeft="23dp"
                    android:layout_alignTop="@+id/ItemImage1"
                    android:layout_toRightOf="@+id/ItemImage1"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="必上传"
                    android:id="@+id/ItemTextNeed1"
                    android:layout_alignBottom="@+id/ItemImage1"
                    android:layout_alignLeft="@+id/ItemText1"
                    android:textSize="20sp"
                    android:textColor="#ffff1e00"></TextView>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="30sp"
                    android:text=">"
                    android:textColor="@color/text_normal_color"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"></TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_height="100dp"
                android:layout_width="500dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/my_white_selector"
                android:id="@+id/btnSFZ"
                android:clickable="true">

                <ImageView
                    android:scaleType="centerInside"
                    android:layout_height="74dp"
                    android:layout_width="74dp"
                    android:id="@+id/ItemImage2"
                    android:src="@drawable/item_image"
                    android:layout_marginLeft="23dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="二代身份证正面拍照上传"
                    android:textColor="@color/text_normal_color"
                    android:textSize="25sp"
                    android:id="@+id/ItemText2"
                    android:layout_marginLeft="23dp"
                    android:layout_alignTop="@+id/ItemImage2"
                    android:layout_toRightOf="@+id/ItemImage2"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="必上传"
                    android:id="@+id/ItemTextNeed2"
                    android:layout_alignBottom="@+id/ItemImage2"
                    android:layout_alignLeft="@+id/ItemText2"
                    android:textSize="20sp"
                    android:textColor="#ffff1e00"></TextView>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="30sp"
                    android:text=">"
                    android:textColor="@color/text_normal_color"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"></TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_height="100dp"
                android:layout_width="500dp"
                android:background="@drawable/my_white_selector"
                android:layout_below="@id/btnYYZZ"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:id="@+id/btnKHXKZ"
                android:clickable="true">

                <ImageView
                    android:scaleType="centerInside"
                    android:layout_height="74dp"
                    android:layout_width="74dp"
                    android:id="@+id/ItemImage3"
                    android:src="@drawable/item_image"
                    android:layout_marginLeft="23dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="开户许可证正面拍照上传"
                    android:textColor="@color/text_normal_color"
                    android:textSize="25sp"
                    android:id="@+id/ItemText3"
                    android:layout_marginLeft="23dp"
                    android:layout_alignTop="@+id/ItemImage3"
                    android:layout_toRightOf="@+id/ItemImage3"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可选择"
                    android:id="@+id/ItemTextNeed3"
                    android:layout_alignBottom="@+id/ItemImage3"
                    android:layout_alignLeft="@+id/ItemText3"
                    android:textSize="20sp"
                    android:textColor="@color/clear_shop"></TextView>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="30sp"
                    android:text=">"
                    android:textColor="@color/text_normal_color"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"></TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_height="100dp"
                android:layout_width="500dp"
                android:layout_below="@id/btnSFZ"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/my_white_selector"
                android:id="@+id/btnSWDJZ"
                android:clickable="true">

                <ImageView
                    android:scaleType="centerInside"
                    android:layout_height="74dp"
                    android:layout_width="74dp"
                    android:id="@+id/ItemImage4"
                    android:src="@drawable/item_image"
                    android:layout_marginLeft="23dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="税务登记证正面拍照上传"
                    android:textColor="@color/text_normal_color"
                    android:textSize="25sp"
                    android:id="@+id/ItemText4"
                    android:layout_marginLeft="23dp"
                    android:layout_alignTop="@+id/ItemImage4"
                    android:layout_toRightOf="@+id/ItemImage4"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可选择"
                    android:textColor="@color/clear_shop"
                    android:id="@+id/ItemTextNeed4"
                    android:layout_alignBottom="@+id/ItemImage4"
                    android:layout_alignLeft="@+id/ItemText4"
                    android:textSize="20sp"></TextView>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="30sp"
                    android:text=">"
                    android:textColor="@color/text_normal_color"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"></TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_height="100dp"
                android:layout_width="500dp"
                android:layout_below="@id/btnKHXKZ"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/my_white_selector"
                android:id="@+id/btnZZDMZ"
                android:clickable="true">

                <ImageView
                    android:scaleType="centerInside"
                    android:layout_height="74dp"
                    android:layout_width="74dp"
                    android:id="@+id/ItemImage5"
                    android:src="@drawable/item_image"
                    android:layout_marginLeft="23dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="组织代码证正面拍照上传"
                    android:textColor="@color/text_normal_color"
                    android:textSize="25sp"
                    android:id="@+id/ItemText5"
                    android:layout_marginLeft="23dp"
                    android:layout_alignTop="@+id/ItemImage5"
                    android:layout_toRightOf="@+id/ItemImage5"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可选择"
                    android:textColor="@color/clear_shop"
                    android:id="@+id/ItemTextNeed5"
                    android:layout_alignBottom="@+id/ItemImage5"
                    android:layout_alignLeft="@+id/ItemText5"
                    android:textSize="20sp"></TextView>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="30sp"
                    android:text=">"
                    android:textColor="@color/text_normal_color"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"></TextView>
            </RelativeLayout>

            <RelativeLayout
                android:layout_height="100dp"
                android:layout_width="500dp"
                android:layout_below="@id/btnSWDJZ"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:background="@drawable/my_white_selector"
                android:id="@+id/btnHEAD"
                android:clickable="true">

                <ImageView
                    android:scaleType="centerInside"
                    android:layout_height="74dp"
                    android:layout_width="74dp"
                    android:id="@+id/ItemImage6"
                    android:src="@drawable/item_image"
                    android:layout_marginLeft="23dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用户头像上传"
                    android:textColor="@color/text_normal_color"
                    android:textSize="25sp"
                    android:id="@+id/ItemText6"
                    android:layout_marginLeft="23dp"
                    android:layout_alignTop="@+id/ItemImage6"
                    android:layout_toRightOf="@+id/ItemImage6"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="必上传"
                    android:id="@+id/ItemTextNeed6"
                    android:layout_alignBottom="@+id/ItemImage6"
                    android:layout_alignLeft="@+id/ItemText6"
                    android:textSize="20sp"
                    android:textColor="#ffff1e00"></TextView>

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="30sp"
                    android:text=">"
                    android:textColor="@color/text_normal_color"
                    android:layout_marginRight="20dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"></TextView>
            </RelativeLayout>
        </RelativeLayout>



    </LinearLayout>

    <Button
        android:layout_width="800dp"
        android:layout_height="100dp"
        android:text="提交审核"
        android:textColor="#ffffffff"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnSubmit"
        android:background="@drawable/my_blue_selector" />
</RelativeLayout>
