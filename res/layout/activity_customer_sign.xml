<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/main_backgroud"
    android:gravity="center"
    tools:context="com.itertk.app.mpos.trade.pos.CustomerSignActivity">

    <LinearLayout
        android:orientation="vertical"
        android:padding="0dp"
        android:background="@drawable/full_corner_area"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="fill_parent"
            android:layout_height="80dp">

            <TextView
                android:layout_marginLeft="20dp"
                android:textColor="@color/text_normal_color"
                android:textSize="30sp"
                android:text="您本次总计消费："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/textMoney"
                android:text="123.00元"
                android:textSize="40sp"
                android:layout_marginBottom="5dp"
                android:textColor="@color/blue_cc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divide"
            android:layout_gravity="center" />

        <FrameLayout
            android:layout_weight="1"
            android:id="@+id/signArea"
            android:padding="1dp"
            android:layout_width="fill_parent"
            android:layout_height="0dp"></FrameLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/divide"
            android:layout_gravity="center" />

        <LinearLayout
            android:gravity="center"
            android:padding="0dp"
            android:layout_width="fill_parent"
            android:layout_height="100dp">


            <Button
                android:id="@+id/btnCancel"

                android:background="@drawable/custom_sign_cancel_selector"
                android:textSize="30sp"
                android:textColor="@color/solid_white"
                android:layout_width="200dp"
                android:layout_height="80dp" />

            <Button
                android:id="@+id/btnOK"
                android:background="@drawable/custom_sign_ok_selector"
                android:textSize="30sp"
                android:layout_marginLeft="200dp"
                android:textColor="@color/solid_white"
                android:layout_width="200dp"
                android:layout_height="80dp" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
