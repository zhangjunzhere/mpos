<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/main_backgroud"
    android:gravity="center"
    tools:context="com.itertk.app.mpos.trade.convenience.TrainLineActivity">


    <LinearLayout
        android:id="@+id/layoutMain"
        android:padding="0dp"
        android:orientation="vertical"
        android:background="@drawable/full_corner_area"
        android:layout_width="750dp"
        android:layout_height="fill_parent">

        <TextView
            android:id="@+id/textTitle"
            android:textColor="@color/text_normal_color"
            android:gravity="center"
            android:textSize="35sp"
            android:text=""
            android:background="@drawable/top_corner"
            android:layout_width="fill_parent"
            android:layout_height="100dp" />

        <ListView
            android:id="@+id/listTrainLine"
            android:layout_width="fill_parent"
            android:layout_height="match_parent">

        </ListView>

    </LinearLayout>

    <LinearLayout
        android:padding="1dp"
        android:layout_marginLeft="40dp"
        android:background="@drawable/full_min_corner"
        android:id="@+id/itemArea"
        android:layout_width="450dp"
        android:layout_height="fill_parent"
        android:layout_toRightOf="@id/layoutMain"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back" />

            <ImageView
                android:src="@drawable/divide_vertical"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="选择席位"
                android:textColor="@color/text_normal_color"
                android:textSize="30sp" />

        </LinearLayout>

        <ImageView
            android:src="@drawable/divide"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:id="@+id/listCabin"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"></ListView>
    </LinearLayout>
</RelativeLayout>
