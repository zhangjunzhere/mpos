<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="640dp"
    android:layout_height="fill_parent"
    android:background="@color/second_backgroud"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_gravity="center"
    tools:context="com.itertk.app.mpos.login.ModifyPasswordActivity">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back_image_selector" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            android:layout_centerHorizontal="true"
            android:textColor="@color/text_normal_color"
            android:textSize="35sp" />

    </RelativeLayout>
    <ImageView
        android:id="@+id/divide1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/title"
        android:background="@drawable/divide"
        />

    <RelativeLayout
        android:id="@+id/password_content"
        android:layout_below="@id/divide1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/pwd_tip"
        android:textSize="25sp"
        android:text="新密码设置："/>
    <LinearLayout
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:background="@drawable/full_corner_area"
        android:padding="0dp"
        android:layout_marginTop="40dp"
        android:layout_below="@+id/pwd_tip"
        android:id="@+id/relativeLayout2"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:src="@drawable/password"
                android:gravity="center|right"
                android:text="原密码："
                android:textSize="25dp"
                android:layout_gravity="center_vertical" />

            <EditText
                android:password="true"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:textColor="@color/text_normal_color"
                android:id="@+id/textOriginalPassword"
                android:layout_marginLeft="30dp"
                android:gravity="left|center"
                android:textSize="25dp"
                android:textColorHint="@color/hint_color"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="请输入原密码"
                android:singleLine="true" />

        </LinearLayout>


        <ImageView
            android:layout_width="798px"
            android:layout_height="wrap_content"
            android:background="@drawable/divide"
            android:layout_gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:src="@drawable/password"
                android:gravity="center|right"
                android:text="新密码："
                android:textSize="25dp"
                android:layout_gravity="center_vertical" />

            <EditText
                android:password="true"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:textColor="@color/text_normal_color"
                android:id="@+id/textPassword"
                android:layout_marginLeft="30dp"
                android:gravity="left|center"
                android:textSize="25dp"
                android:textColorHint="@color/hint_color"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="请输入新密码"
                android:singleLine="true" />

        </LinearLayout>

        <ImageView
            android:layout_width="798px"
            android:layout_height="wrap_content"
            android:background="@drawable/divide"
            android:layout_gravity="center" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="100px"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:id="@+id/phoneForgetImage"
                android:src="@drawable/password"
                android:gravity="center|right"
                android:text="确认密码："
                android:textSize="25dp"
                android:layout_gravity="center_vertical" />

            <EditText
                android:password="true"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:textColor="@color/text_normal_color"
                android:id="@+id/textPasswordConfirm"
                android:layout_marginLeft="30dp"
                android:gravity="left|center"
                android:textSize="25dp"
                android:textColorHint="@color/hint_color"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="请确认新密码"
                android:singleLine="true" />

        </LinearLayout>
    </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayout2"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:text="（注:密码由6-16位字母、数字、下划线及特殊符号组成！）"/>
    </RelativeLayout>

    <Button
        android:layout_below="@id/password_content"
        android:textColor="@color/solid_white"
        android:textSize="30sp"
        android:layout_marginTop="40dp"
        android:background="@drawable/my_blue_selector"
        android:text="确定"
        android:layout_centerInParent="true"
        android:id="@+id/btnOK"
        android:layout_width="500dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/btnOK"/>
</RelativeLayout>
